<style lang="scss">
@import './styles/common.wxss';
@import './styles/iconfont.wxss';
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}

</style>

<script>
import wepy from 'wepy'
import 'wepy-async-function'

export default class extends wepy.app {
  config = {
    navigationBarBackgroundColor: '#000000',
    navigationBarTextStyle: 'white',
    pages: [
      'pages/zone',
      'pages/classList',
      'pages/bindRelationship',
      'pages/authorize',
      'pages/publish',
      'pages/login',
      'pages/cashWithdraw',
      'pages/bindPhone',
      'pages/cashflow',
      'pages/photos',
      'pages/recordCashflow',
      'pages/createClassFail',
      'pages/createClassSuccess',
      'pages/joinClass',
      'pages/createClass'
    ],
    window: {
      backgroundTextStyle: 'light',
      navigationBarBackgroundColor: '#fff',
      navigationBarTitleText: 'WeChat',
      navigationBarTextStyle: 'black'
    },
    tabBar: {
      backgroundColor: '#fff',
      borderStyle: 'white',
      position: 'bottom',
      selectedColor: '#ff7811',
      list: [
        {
          pagePath: 'pages/zone',
          iconPath: 'images/tab/index.png',
          text: '首页',
          selectedIconPath: 'images/tab/index-active.png'
        },
        {
          pagePath: 'pages/classList',
          iconPath: 'images/tab/order.png',
          text: '班级',
          selectedIconPath: 'images/tab/order-active.png'
        }
      ]
    }
  }

  globalData = {
    userInfo: null,
    apiUrl: 'http://www.patriarch.cm/api/v1',
    userData: {}
  }

  constructor () {
    super()
    this.use('requestfix')
    this.use('promisify')
    this.intercept('request', {

      config(req) {
        // req.url = 'http://127.0.0.1:3000/mock/11/api/v1' + req.url
        req.url = 'http://www.patriarch.cm/api/v1' + req.url
        wx.showLoading({
          title: '加载中',
          mask: true
        })
        return req
      },
      success(res) {
        if (!res.data.success) {
          wx.showToast({
            title: res.data.error_msg,
            icon: 'none',
            duration: 2000
          })
        }
        return res
      },
      fail(req) {
        console.log('request fail: ', req)
        return req
      },
      complete(req) {
        wx.hideLoading()
      }
    })
  }

  onLaunch() {
    this.testAsync()
  }

  sleep (s) {
    return new Promise((resolve, reject) => {
      setTimeout(() => {
        resolve('promise resolved')
      }, s * 1000)
    })
  }

  async testAsync () {
    const data = await this.sleep(3)
    console.log(data)
  }

  getUserInfo(cb) {
    const that = this
    if (this.globalData.userInfo) {
      return this.globalData.userInfo
    }
    wepy.getUserInfo({
      success (res) {
        that.globalData.userInfo = res.userInfo
        cb && cb(res.userInfo)
      }
    })
  }
}
</script>
