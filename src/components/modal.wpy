<template lang="wxml" minapp="wepy">
  <view class="wx-popup" wx:if="{{flag}}">
    <view class='popup-container'>
      <view class="wx-popup-con">
        <input type="text" placeholder={{placeholderText}} @input="bindInput">
      </view>
      <view class="wx-popup-btn">
        <text class="btn-no" @tap='cancelFn'>{{cancelBtnText}}</text>
        <text class="btn-ok" @tap='sureFn'>{{sureBtnText}}</text>
      </view>
    </view>
  </view>
</template>

<script>
import wepy from 'wepy'
export default class Modal extends wepy.component {
  config = {
    navigationBarTitleText: '财务记账'
  }
  props = {
    cancelBtnText: String,
    sureBtnText: String,
    placeholderText: String,
    flag: Boolean
  }
  onLoad() {

  }
  data = {
    input: ''
  }
  methods = {
    bindInput (e) {
      this.input = e.detail.value
      this.$apply()
    },
    cancelFn () {
      this.$emit('cancel')
    },
    sureFn () {
      this.$emit('sure', this.input)
    }
  }
}
</script>

