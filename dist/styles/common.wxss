page {
  height: 100%;
  color: #586069;
  font-size: 30rpx;
}
.common-container {
  padding: 30rpx;
  height: 100%;
}
.common-container-grey {
  background-color: #EBEBEB;
}
.common-picker {
  display:flex;
  margin: 0 auto;
  padding: 30rpx;
  box-sizing:border-box;
  font-size:30rpx;
  text-align:center;
  text-decoration:none;
  background-color: #fff;
  border-radius:4rpx;
  -webkit-tap-highlight-color:rgba(0, 0, 0, 0);
  overflow:hidden;
  justify-content: space-between;
  margin-top: 40rpx;
  align-items: center;
}
.common-line {
  padding: 26rpx;
  background-color: #fff;
  margin-top: 40rpx;
}
.flex-wrapper {
  display: flex;
}
.flex-wrapper.between {
  justify-content: space-between;
}
.flex-wrapper.center {
  align-items: center;
}
.text-right {
  text-align: right;
}
.text-center {
  text-align: center;
}
.text-right {
  text-align: right;
}
.font-green {
  color: #1F9E3C;
}
.font-grey {
  color: #646464;
}
.font-small {
  font-size: 24rpx;
}
.mb-30 {
  margin-bottom: 30rpx;
}
.bg-white {
  background-color: #fff;
}
.line-with-btn {
  display: flex;
  align-items: center;
  padding: 18rpx 30rpx;
}
.line-with-btn .btn{
  width:200rpx;
  padding:15rpx 30rpx;
  margin-right: 0;
}
.font-black {
  color: #000;
}
.font-blue {
  color: #1F5985;
}
.font-bold {
  font-weight: bold;
}
.fixed-bottom-btn {
  position:fixed;
  left:0;
  bottom:0;
  width:100%;
  height:100rpx;
  line-height:100rpx;
  font-size:30rpx;
  text-align:center;
  color:#fff;
  z-index:2;
  background-color: #1F9E3C;
}
.fixed-bottom-btn.top {
  top: 0;
}
.fixed-bottom-btn.right {
  left: auto;
  right: 30rpx;
  background-color:#07C160;
  color:#fff;
  border-radius:10rpx;
  height:80rpx;
  line-height:80rpx;
  width: 16%;
}
.fixed-bottom-btn-2 > view{
  width: 50%;
}
.btn-white {
  background-color: #eee;
  color: #1F9E3C;
}
.tag {
  display: inline-block;
  padding: 4rpx 20rpx;
  border-radius: 20rpx;
  font-size: 26rpx;
  margin-right: 20rpx;
}
.tag-big {
  padding: 10rpx 20rpx;
}
.tag-grey {
  background-color: #586069;
  color: #fff;
}
.tag-empty {
  border: 2rpx solid #B9B9B9;
}
.tag-blue {
  background-color: #1F9E3C;
  color: #fff;
}
.tag-light-grey {
  background-color: #F2F2F2;
  color: #808080;
}
.small-avatar {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 20rpx;
}
.avatar {
  border-radius: 50%;
  overflow: hidden;
}
.dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  overflow: hidden;
}
.dot.dot-grey {
  background-color: #646464;
}

