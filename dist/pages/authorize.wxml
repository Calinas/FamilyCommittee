
  <view class="common-container">
    <view class="font-black font-bold title">
      <text>班级信息</text>
    </view>
    <view class="flex-wrapper item">
      <text class="font-bold font-black sub-title">班级：</text>
      <text>{{classInfo.name}}</text>
    </view>
    <view class="flex-wrapper item">
      <text class="font-bold font-black sub-title">班委会验证码：</text>
      <text>{{classInfo.join_key}}</text>
    </view>
    <view class="flex-wrapper item last-one">
      <text class="font-bold font-black sub-title">班委会二维码：</text>
      <image src="{{classInfo.qr_code}}" class="qr-code"/>
    </view>
    <view class="flex-wrapper item last-one" style="align-items:center;">
      <text class="font-bold font-black sub-title" style="margin-right: 0;">修改班级验证码：</text>
      <input type="tel" maxlength="6" style="border-bottom: 2rpx solid #bbb;" id="code" bindinput="bindForm"/>
      <button bindtap="changeCode">修改</button>
    </view>
    <view class="flex-wrapper item last-one" style="align-items:center;">
      <text class="font-bold font-black sub-title" style="margin-right: 0;">逐出成员：</text>
      <input type="tel" maxlength="6" style="border-bottom: 2rpx solid #bbb;" id="code" bindtap="addNew" data-wpyaddnew-a="{{true}}"/>
      <button bindtap="changeCode">确认</button>
    </view>
    <view class="font-black font-bold title">
      <text>权限管理</text>
    </view>
    <!-- 会长权限 -->
    <view class="flex-wrapper item"  wx:for="{{list}}">
      <view class="font-bold font-black sub-title">{{item.name}}</view>
      <view class="tag tag-light-grey" wx:for="{{item.auth_list}}" wx:for-item="member" bindtap="del" data-wpydel-a="{{member.class_auth_id}}">
        <text class="iconfont icon-delete"/>
        <text>{{member.member.class_nickname}}</text>
      </view>
      <view class="tag-wrapper">
        <text class="tag tag-blue" bindtap="addNew" data-wpyaddnew-a="{{true}}" data-wpyaddnew-b="{{item.id}}">添加</text>
      </view>
    </view>
  </view>
  
  <view class="wx-popup _8859a02"  wx:if="{{$Modal$flag}}">
    <view class="popup-container _8859a02">
      <view class="wx-popup-con _8859a02">
        <input type="text" placeholder="{{$Modal$placeholderText}}" bindinput="$Modal$bindInput" value="{{$Modal$input}}" class="_8859a02"/>
      </view>
      <view class="wx-popup-btn _8859a02">
        <text class="btn-no _8859a02" bindtap="$Modal$cancelFn">{{$Modal$cancelBtnText}}</text>
        <text class="btn-ok _8859a02" bindtap="$Modal$sureFn">{{$Modal$sureBtnText}}</text>
      </view>
    </view>
  </view>
  
  <view class="wx-popup _75fb637"  wx:if="{{$Search$flag}}">
    <view class="popup-container _75fb637">
      <text class="iconfont icon-delete _75fb637" bindtap="$Search$closeModal"/>
      <view class="flex-wrapper _75fb637">
        <input type="text" placeholder="请输入姓名" class="input _75fb637" id="input" value="{{$Search$input}}" bindinput="$Search$bindInput"/>
        <view class="search-btn _75fb637" bindtap="$Search$sureFn">搜索</view>
      </view>
      <view class="list _75fb637">
        <block wx:if="{{!$Search$studentList.length}}" class="_75fb637">
          <text class="text-center no-remind _75fb637">暂无内容</text>
        </block>
        <block wx:else class="_75fb637">
          <view class="item _75fb637" wx:for="{{$Search$studentList}}" bindtap="$Search$select" data-wpyselect-a="{{item.id}}">{{item.class_nickname}}</view>
        </block>
      </view>
    </view>
  </view>