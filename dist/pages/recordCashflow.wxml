
  <view class="common-container">
    <radio-group class="width80" bindchange="pickerChange" id="type">
      <label class="radio"  wx:for="{{cashType}}">
        <radio value="{{item.type}}" checked="{{item.checked}}"/>
        {{item.title}}
      </label>
    </radio-group>
    <input type="number" placeholder="请输入支出金额" class="money-input width80" bindinput="pickerChange" id="money"/>
    <textarea class="money-desc" placeholder="请输入您支出金额的详情描述" bindinput="pickerChange" id="msg"/>
    <text class="font-black font-bold upload-text">上传凭证</text>
    <view class="img-list flex-wrapper">
      <block wx:for="{{img}}" wx:for-index="index" wx:for-item="item" wx:key="key">
        <view class="img-item">
          <image bindtap="previewImage" mode="widthFix" class="img" src="{{item}}"/>
          <image src="/images/close-white.png" bindtap="deleteFn" class="close-btn" data-wpydeletefn-a="img" data-wpydeletefn-b="{{index}}"/>
        </view>
      </block>
      <view class="img-item" bindtap="chooseImage">
        <image mode="widthFix" class="img" src="/images/add-img.png"/>
      </view>
    </view>
    <picker class="picker" mode="selector" value="{{seenIndex}}" range="{{seeTypes}}" range-key="title" bindchange="pickerChange" id="seenIndex">
       <view class="flex-wrapper between">
        <view>
          <text class="iconfont icon-user font-black"/>
          <text class="font-black">谁可以看</text>
        </view>
        <text>{{seeTypes[seenIndex].title}}</text>
      </view>
    </picker>
    <view class="fixed-bottom-btn" bindtap="submit">记一笔</view>
  </view>