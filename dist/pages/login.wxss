

.icon-wechat {
  width: 100rpx;
  padding: 40rpx 0;
}
.hover {
  background: gray;
}

.small-title {
  font-size: 28rpx;
}

.inner {
  padding: 58rpx;
  font-size: 30rpx;
}

.line {
  margin-top: 40rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.weixin-login {
  margin-top: 150rpx;
}

.login-title {
  display: flex;
  font-size: 28rpx;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.weixin-login .line-title {
  display: inline-block;
  vertical-align: middle;
  width: 86rpx;
  height: 2rpx;
  background-color: #808080;
}

.weixin-login .line-text {
  padding: 0 24rpx;
}

.weixin-login-btn {
  font-size: 30rpx;
  color: #fff;
  width: 400rpx;
  border-radius: 40rpx;
  letter-spacing: 2rpx;
  background-color: #fd8238;
}
.bind-phone-lay {
  position: fixed;
  top: 30%;
  height: 240rpx;
  width: 70%;
  left: 15%;
  background-color: white;
  z-index: 6;
  border-radius: 4px;
  overflow: hidden;
}

.bind-phone-lay > view {
  font-size: 28rpx;
  color: #888;
  padding: 20rpx 40rpx;
}

.bind-phone-lay .weixin-login-btn {
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 100%;
  border-radius: 0;
  line-height: 90rpx;
  height: 90rpx;
  border: 0;
  /* border-top: 1px solid #dfdfdf; */
  color: #0bb20c;
}

.bind-phone-lay .weixin-login-btn:after {
  position: absolute;
  content: ' ';
  height: 1px;
  border-top: 1px solid #ededed;
  color: #d9d9d9;
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5); /*缩放*/
}
.overlay {
  position: fixed;
  z-index: 5;
  opacity: 0.5;
  background-color: #000;
  height: 100%;
  width: 100%;
  left: 0;
  top: 0;
}
