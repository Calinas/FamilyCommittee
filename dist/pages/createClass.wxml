
  <view class="join-class common-container common-container-grey _c94d010">
    <view class="flex-wrapper navigation-bar center _c94d010">
      <view class="item first {{type === 'create' ? 'active': ''}} _c94d010" bindtap="setPage" data-wpysetpage-a="createClass" data-wpysetpage-b="create">{{type === 'create' ? '当前：创建班级' : '切换至创建班级'}}</view>
      <view class="item middle {{type === 'join' ? 'active' : ''}} _c94d010" bindtap="setPage" data-wpysetpage-a="createClass" data-wpysetpage-b="join">{{type === 'join' ? '当前：加入班级' : '切换至加入班级'}}</view>
      <view class="item right _c94d010" bindtap="setPage" data-wpysetpage-a="selectClass">切换至选择班级</view>
    </view>
    <picker mode="selector" value="{{cityIndex}}" range="{{cityList}}" range-key="city_name"  wx:key="{{index}}" bindchange="bindPicker" id="cityIndex" class="_c94d010">
      <view class="common-picker _c94d010">
        <text class="_c94d010">{{cityName}}</text>
        <text class="iconfont icon-arrow-right _c94d010"/>
      </view>
    </picker>
    <view class="class-select-wrapper flex-wrapper _c94d010">
      <view class="item common-line {{index === activeClassType ? 'active' : ''}} _c94d010"  wx:for="{{classTypes}}" wx:key="{{index}}" bindtap="select" data-wpyselect-a="{{index}}">{{item.title}}</view>
    </view>
