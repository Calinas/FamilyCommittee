      <view class="common-picker">
        <text>{{schoolList[schoolIndex].name}}</text>
        <text class="iconfont icon-arrow-right"></text>
      </view>
    </picker> -->
    <view class="common-picker search-school-wrapper _c94d010">
      <input value="{{keywords}}" placeholder="请输入学校名称搜索" bindinput="bindInput" id="keywords" class="_c94d010"/>
      <text class="iconfont icon-delete _c94d010" bindtap="deleteSchool"/>
      <scroll-view scroll-y class="{{showSchool ? 'show' : 'hide'}} _c94d010">
        <block  wx:if="{{schoolList.length}}" class="_c94d010">
          <view class="list _c94d010" wx:for="{{schoolList}}" bindtap="setSchool" data-wpysetschool-a="{{item}}">{{item.name}}</view>
        </block>
        <block wx:else class="_c94d010">
          <view class="text-center _c94d010" style="padding-top: 60rpx;" bindtap="hideSchool">没有找到学校，<text catchtap="createSchool" class="font-blue _c94d010">点击此处创建该学校</text></view>
        </block>
      </scroll-view>
    </view>

    <view class="common-picker _c94d010" style="background-color: transparent;padding: 0;">
      <!-- <text>2019年10班</text>
      <text class="iconfont icon-arrow-right"></text> -->
      <view class="flex-wrapper center _c94d010" style="padding: 30rpx;background-color: #fff;margin-right: 20rpx">
        <input type="number" placeholder="比如2021" id="gradeNumber" bindinput="bindInput" class="_c94d010"/>
        <text class="_c94d010">级</text>
      </view>
      <view class="flex-wrapper center _c94d010" style="padding: 30rpx;background-color: #fff;">
        <input type="number" placeholder="输入班级号" id="classNumber" bindinput="bindInput" class="_c94d010"/>
        <text class="_c94d010">班</text>
      </view>
      <view class="_c94d010"/>
    </view>

    <view class="common-line text-center font-green submit-btn _c94d010" bindtap="submit">下一步</view>

    <view class="flex-wrapper between bottom-buttons _c94d010" style="display: none;">
      <button open-type="share" class="link font-30 _c94d010">邀请他人来创建班级</button>
      <button class="link font-30 _c94d010">加入已有班级</button>
    </view>
  </view>