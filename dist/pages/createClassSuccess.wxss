.weui-btn {
  position: relative;
  display: block;
  margin: 0 auto;
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  text-align: center;
  text-decoration: none;
  color: #fff;
  background-color: #fff;
  border-radius: 4rpx;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  overflow: hidden; }

.weui-btn_primary {
  background-color: #2DB200; }

.common-line {
  margin-top: 0; }

.info {
  line-height: 1.4rem;
  width: 90%;
  margin: 0 auto; }

.btn-invite {
  display: block;
  padding: 10rpx;
  margin: 40rpx auto;
  text-align: center;
  width: 320rpx;
  background-color: #fff;
  width: 320rpx;
  font-size: 30rpx; }

.code {
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx auto; }

.remind {
  width: 100%;
  text-align: center;
