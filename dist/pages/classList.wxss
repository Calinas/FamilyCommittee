.weui-btn {
  position: relative;
  display: block;
  margin: 0 auto;
  padding: 30rpx;
  box-sizing: border-box;
  font-size: 30rpx;
  text-align: center;
  text-decoration: none;
  color: #fff;
  background-color: #fff;
  border-radius: 4rpx;
  -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
  overflow: hidden; }

.weui-btn_primary {
  background-color: #2DB200; }

.no-remind {
  display: block;
  width: 100%;
  margin: 0 auto;
  text-align: center; }

.img-mask {
  position: relative;
  color: #fff;
  height: 360rpx;
  width: 100%; }
  .img-mask .bg-img {
    width: 100%;
    height: 360rpx; }
  .img-mask .caption {
    position: absolute;
    left: 50%;
    top: 40%;
    transform: translate(-50%); }
    .img-mask .caption text {
      display: block; }
    .img-mask .caption .school {
      font-size: 24rpx; }
    .img-mask .caption .class {
      font-size: 30rpx; }

.avatar {
  overflow: hidden;
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  left: 0;
  right: 0;
  margin: auto;
  transform: translateY(-50%); }

.class-list {
  margin-top: 140rpx; }
  .class-list .flex-wrapper {
    line-height: 100rpx;
    border-bottom: 1px solid #f2f2f2;
    width: 86%;
    margin: auto; }
  .class-list .dot {
    margin-right: 20rpx; }

.fixed-bottom {
  width: 80%;
  margin: 0 auto;
  margin-top: 100rpx; }
  .fixed-bottom .weui-btn {
    padding: 20rpx 80rpx; }
